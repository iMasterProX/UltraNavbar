<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Hint -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/press_keys_hint"
        android:textSize="14sp"
        android:textColor="?android:textColorSecondary" />

    <!-- Key combination display -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtKeyCombination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="24dp"
            android:textColor="?attr/colorPrimary" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Press mode selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/press_mode_title"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioPressMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioNormalPress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/normal_press"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioLongPress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/long_press"
            android:layout_marginTop="8dp" />
    </RadioGroup>

</LinearLayout>
