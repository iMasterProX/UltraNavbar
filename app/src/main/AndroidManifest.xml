<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" tools:ignore="QueryAllPackagesPermission" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- 화면 방향 설정 권한 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <!-- Wacom 펜 설정 접근 권한 (ADB로 부여 필요) -->
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <!-- 최근 앱 목록 조회 권한 (최초 로드용, 권한 미부여 시 graceful 스킵) -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <!-- 배경화면 접근을 위한 미디어 읽기 권한 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"
        android:minSdkVersion="33" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- 태블릿 전용 앱 (600dp 이상 화면 필요) -->
    <supports-screens
        android:requiresSmallestWidthDp="600"
        android:largeScreens="true"
        android:xlargeScreens="true" />

    <application
        android:name=".UltraNavbarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:resizeableActivity="false"
        android:theme="@style/Theme.UltraNavbar">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:configChanges="orientation|screenSize|screenLayout|smallestScreenSize"
            android:theme="@style/Theme.UltraNavbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.AppListActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.WallpaperPreviewActivity"
            android:exported="false"
            android:theme="@style/Theme.UltraNavbar.Fullscreen" />

        <activity
            android:name=".ui.SetupActivity"
            android:exported="false"
            android:theme="@style/Theme.UltraNavbar" />

        <activity
            android:name=".ui.KeyboardShortcutActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.UltraNavbar" />

        <activity
            android:name=".ui.PenButtonConfigActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.UltraNavbar" />

        <activity
            android:name=".ui.ShortcutPickerActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.UltraNavbar" />

        <activity
            android:name=".ui.PenTestCanvasActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.UltraNavbar" />

        <activity
            android:name=".ui.TouchPointSetupActivity"
            android:exported="false"
            android:parentActivityName=".ui.PenButtonConfigActivity"
            android:theme="@style/Theme.UltraNavbar.Transparent" />

        <activity
            android:name=".ui.NodeSelectionActivity"
            android:exported="false"
            android:parentActivityName=".ui.PenButtonConfigActivity"
            android:theme="@style/Theme.UltraNavbar.Transparent" />

        <!-- 펜 버튼 브릿지 Activities (페인팅 기능용) -->
        <!-- taskAffinity=""로 별도 태스크에서 실행, finishOnTaskLaunch로 태스크 전환 시 종료 -->
        <activity
            android:name=".ui.PenButtonABridgeActivity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:taskAffinity=""
            android:launchMode="singleInstance"
            android:label="@string/pen_button_a_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.PenButtonBBridgeActivity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:taskAffinity=""
            android:launchMode="singleInstance"
            android:label="@string/pen_button_b_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.NavBarAccessibilityService"
            android:label="@string/app_name"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- 키보드 배터리 위젯 -->
        <receiver
            android:name=".widget.KeyboardBatteryWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/keyboard_battery_widget_info" />
        </receiver>

        <receiver android:name=".BootReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
